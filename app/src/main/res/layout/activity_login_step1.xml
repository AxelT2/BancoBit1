<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Morado"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/accent1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lineaGuia"
        android:gravity="center">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="273dp"
            android:layout_height="199dp"
            app:srcCompat="@drawable/logobro"
            tools:ignore="MissingConstraints"


            />


    </LinearLayout>

    <Button
        android:id="@+id/btnInicioSesion"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:background="@drawable/roundbuttons"
        android:backgroundTint="@color/moradoBoton"
        android:text="INICIAR SESION"
        android:visibility="visible"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="443dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnProblemas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/moradoBoton"
        android:text="Registrarse"
        android:visibility="visible"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="500dp"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.Guideline
        android:id="@+id/lineaGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="383dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="576dp"
        android:backgroundTint="@color/Morado"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>